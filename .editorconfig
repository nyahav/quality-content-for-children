# Editor configuration, see http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true

[*.md]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = false

[.gitignore]
insert_final_newline = true

[*.json]
indent_style = space
indent_size = 2

[*.{js,ts,jsx,tsx,mdx}]
indent_style = space
indent_size = 2
insert_final_newline = true
max_line_length = 140

[*.{css,scss}]
indent_style = space
indent_size = 2
insert_final_newline = true
max_line_length = 140
